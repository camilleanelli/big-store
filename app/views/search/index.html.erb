<div class="spacer"></div>
<div class="container-fluid">
  <section class="row">
    <input class="mx-auto" type="text" autocomplete="off" id="search-box" placeholder="Search an application" />
  </section>
  <div class="hidden-md-up row pd-top-50">
    <form class="form-inline mx-auto">
      <select class="form-control" id="facetselect"></select>
    </form>
  </div>
    
  <div id="content">
    <div class="mg-0 row">
      <div class="div-facets hidden-sm-down  col-xs-12 col-sm-3">
        <div class="row align-items-center">
          <div>
            <h3 class="title-facet">Categories</h3>
          </div>
          <div id="reset">
            <a href="#"><i data-toggle="tooltip" data-placement="top" title="Clear categories" class="fa fa-times" aria-hidden="true"></i></a>
          </div>
        </div>
        <ul id="facet-list"></ul>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-9">
        <div class="row align-items-center">
          <div class="col-sm-4">
            <div id="info-results" class="hidden-xs-down"></div>
          </div>
          <div class="col-xs-12 col-sm-8">
            <div class="pull-right pd-15">
              <form class="form-inline">
                <select class="form-control" id="filter-select">
                  <option selected>Most relevant</option>
                  <option>Most populare</option>
                  <option>Less populare</option>
                </select>
              </form>
            </div>
            <div class="select-pages pd-15">
              <form class="form-inline">
                <select class="form-control" id="select-pages">
                  <option>5</option>
                  <option>10</option>
                  <option>15</option>
                  <option selected>20 results</option>
                  <option>50</option>
                </select>
              </form>
            </div>
          </div>
        </div>
        <div id="container" class="row"></div>

        <div id="pagination" class="row">
          <nav aria-label="Page navigation example" class="">
            <ul class="pagination"></ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
